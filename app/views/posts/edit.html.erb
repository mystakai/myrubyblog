<h1>Edit Post</h1>
<%= form_for @post do |f| %>
  <p>
    <%= f.label :title %>
    <br />
    <%= f.text_field :title %>
    <br />
  </p>

  <p>
    <%= f.label :body %>
    <br />
    <%= f.text_area :body, size: "60x12" %>
    <br />
  </p>

  <p>
    <%= f.select :category_id, @category.collect {|x| [x.name, x.id]}, {include_blank: 'Select One'} %>
    <br />
  </p>

  <p>
    <%= f.submit%>
  </p>
<% end %>
<%= link_to "Go Back", post_path %>
